{
  "name": "desktop",
  "productName": "CustomDiscord",
  "version": "1.0.0",
  "description": "Desktop App for CustomDiscord",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "desktop",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "icons/win/icon.ico",
      "uninstallerIcon": "icons/win/icon.ico",
      "uninstallDisplayName": "CustomDiscord Desktop",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "Creelone Studios",
    "email": "creelone.studios@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "12.0.7",
    "electron-builder": "^22.10.5"
  }
}
